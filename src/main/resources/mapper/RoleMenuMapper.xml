<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.glsx.shield.modules.mapper.RoleMenuMapper">
    <resultMap id="BaseResultMap" type="cn.com.glsx.shield.modules.entity.RoleMenu">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="menu_id" jdbcType="INTEGER" property="menuNo"/>
        <result column="del_flag" jdbcType="TINYINT" property="delFlag"/>
        <result column="created_date" jdbcType="TIMESTAMP" property="createdDate"/>
        <result column="created_by" jdbcType="INTEGER" property="createdBy"/>
        <result column="updated_date" jdbcType="TIMESTAMP" property="updatedDate"/>
        <result column="updated_by" jdbcType="INTEGER" property="updatedBy"/>
    </resultMap>
    <sql id="Base_Column_List">
        id
        , role_id, menu_id, del_flag, created_date, created_by, updated_date, updated_by
    </sql>

    <select id="selectByRoleId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_role_menu
        where del_flag = 0
        and role_id = #{roleId}
    </select>

    <select id="selectByMenuId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_role_menu
        where del_flag = 0
        and menu_id = #{menuId}
    </select>

    <select id="selectMenuIdsByRoleId" resultType="java.lang.Long">
        select menu_id
        from t_role_menu
        where del_flag = 0
          and role_id = #{roleId}
    </select>

    <select id="selectMenuIdsByRoleIds" resultType="java.lang.Long">
        select menu_id
        from t_role_menu
        where del_flag = 0
        and role_id in
        <foreach collection="roleIds" separator="," close=")" open="(" item="roleId">
            #{roleId}
        </foreach>
    </select>

    <select id="selectRoleIdsByMenuId" resultType="java.lang.Long">
        select role_id
        from t_role_menu
        where del_flag = 0
          and menu_id = #{menuId}
    </select>

    <update id="logicDelByRoleId">
        update t_role_menu
        set del_flag = -1
        where role_id = #{roleId}
    </update>

    <delete id="deleteByMenuNo">
        delete
        from t_role_menu
        where menu_id = #{menuNo}
    </delete>
</mapper>