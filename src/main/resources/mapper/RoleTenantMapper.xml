<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.glsx.shield.modules.mapper.RoleTenantMapper">
    <resultMap id="BaseResultMap" type="cn.com.glsx.shield.modules.entity.RoleTenant">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="tenant_id" jdbcType="INTEGER" property="tenantId"/>
        <result column="del_flag" jdbcType="TINYINT" property="delFlag"/>
        <result column="created_date" jdbcType="TIMESTAMP" property="createdDate"/>
        <result column="created_by" jdbcType="INTEGER" property="createdBy"/>
        <result column="updated_date" jdbcType="TIMESTAMP" property="updatedDate"/>
        <result column="updated_by" jdbcType="INTEGER" property="updatedBy"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--
          WARNING - @mbg.generated
        -->
        id, role_id, tenant_id, del_flag, created_date, created_by, updated_date, updated_by
    </sql>
    <select id="selectByRoleId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_role_tenant
        where role_id = #{roleId}
        and del_flag = 0
    </select>

    <select id="selectTenantIdsByRoleId" resultType="java.lang.Long">
        select tenant_id
        from t_role_tenant
        where role_id = #{roleId}
          and del_flag = 0
    </select>

    <select id="selectByTenantId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_role_tenant
        where tenant_id = #{tenantId}
        and del_flag = 0
    </select>

    <select id="selectRoleIdsByTenantId" resultType="java.lang.Long">
        select role_id
        from t_role_tenant
        where tenant_id = #{tenantId}
          and del_flag = 0
    </select>

    <select id="selectRoleIdsByTenantIds" resultType="java.lang.Long">
        select
        role_id
        from t_role_tenant
        where tenant_id in
        <foreach collection="tenantIds" open="(" close=")" separator="," item="tenantId">
            #{tenantId}
        </foreach>
        and del_flag = 0
    </select>

    <update id="logicDeleteByRoleId">
        update t_role_tenant
        set del_flag = -1
        where role_id = #{roleId}
    </update>
</mapper>